extends style

block logo_link
    a(href="/w/#{name}/#{secret}/#{user}/")#title #{website} #{title}

append content
    form#form(action="#",method="post")
        input#contentbox(name="content")
        input.button#contentsubmit(type="submit", value="write!")

    table.list
        for mesg in mesglist
            tr.list_item
                - if (mesg.author == user) 
                    td.list_info_mine
                        !{mesg.content}
                        .note= mesg.author
                             @#{mesg.create}
                - else
                    td.list_info
                        !{mesg.content}
                        .note= mesg.author
                            @#{mesg.create}
    #lrnav_bar
        - if (page != 1)
            a(href='/w/#{name}/#{secret}/#{user}/page/#{page-1}').lrnav << new
        - if (page < totpage)
            a(href='/w/#{name}/#{secret}/#{user}/page/#{page+1}').lrnav old >>

